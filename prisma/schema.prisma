generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

model DeliveryZone {
  id      Int                                     @id @default(autoincrement())
  title   String                                  @unique @db.VarChar(30)
  polygon Unsupported("geography(polygon, 4326)")
}
